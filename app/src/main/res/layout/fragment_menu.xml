<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MenuFragment">

    <FrameLayout
        android:id="@+id/search_bar_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:id="@+id/menu_search_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:showAsAction="always|collapseActionView"
            android:queryHint="What do you got in mind?" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/category_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar_container">

        <LinearLayout
            android:id="@+id/pizza_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pizzaa" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pizza"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chicken_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/chicken" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chicken"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pasta_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pasta" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pasta"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appetizer_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/salad" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Appetizer"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drinks_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/drinks" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Drinks"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/menu_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/sections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pizza_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginStart="8dp"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/chicken_section_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="CHICKEN"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chicken_view"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/pasta_section_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="PASTA"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pasta_view"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/appetizer_section_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="APPERTIZER"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/appetizer_view"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/drinks_section_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="DRINKS"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/drinks_view"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>